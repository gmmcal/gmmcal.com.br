{
  "name": "gmmcal.com.br",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.2",
    "@fortawesome/free-brands-svg-icons": "^5.2.0",
    "@fortawesome/free-regular-svg-icons": "^5.2.0",
    "@fortawesome/free-solid-svg-icons": "^5.2.0",
    "@fortawesome/vue-fontawesome": "^0.1.1",
    "@rails/webpacker": "^3.5",
    "bootstrap": "^4.1.3",
    "i18n-js": "^3.0.8",
    "marked": "^0.5.0",
    "rails-ujs": "^5.2.1",
    "sortablejs": "^1.7.0",
    "turbolinks": "^5.1.1",
    "vue": "^2.5.16",
    "vue-loader": "14.2.2",
    "vue-template-compiler": "^2.5.16",
    "vue-turbolinks": "^2.0.3",
    "yarn": "^1.9.4"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-jest": "^23.2.0",
    "cypress": "^3.1.0",
    "jest": "^23.2.0",
    "jest-canvas-mock": "^1.0.3",
    "jest-serializer-vue": "^2.0.2",
    "vue-jest": "^2.6.0",
    "webpack-dev-server": "^2.11.2"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "spec/frontend/javascript",
      "app/javascript/packs"
    ],
    "setupFiles": [
      "jest-canvas-mock"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "app/javascript/packs/components/**/*.{js,vue}",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "lcovonly",
      "html"
    ],
    "coverageDirectory": "coverage/frontend",
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleDirectories": [
      "node_modules",
      "app/javascript"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/javascript/packs/$1"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue"
    ]
  },
  "scripts": {
    "test": "jest --watch",
    "test:once": "jest",
    "cypress": "rake db:setup && cypress open",
    "cypress:ci": "cypress run --browser chrome --record"
  }
}
