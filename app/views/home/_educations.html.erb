<section class="education" id="education">
  <div class="container">
    <div class="heading">
      <h2><%= t('title', scope: %i[frontend education]) %></h2>
      <p><%= t('subtitle', scope: %i[frontend education]) %></p>
    </div>
    <% @educations.each do |education| %>
      <div class="row education-details">
        <div class="col-xs-12 col-sm-12 col-md-3 col-lg-2 left-area">
          <div class="year">
            <span class="end"><%= education.end_date %></span>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-9 col-lg-10 right-area">
          <div class="arrowpart"></div>
          <div class="ex-con">
            <h4><%= education.institution %></h4>
            <h5><%= education.course %></h5>
            <div class="description"><%= markdown education.description %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
