<li class="<%=categories_as_class(portfolio)%> col-xs-6 col-sm-4 col-md-3 col-lg-3">
  <div class="lightCon">
    <span class="hoverBox">
      <span class="smallIcon">
        <%=link_to portfolio.image, rel: "lightbox-demo", data: { title: portfolio.full_title }, class: "zoom lb lb_warsaw1" do %>
          <i class="fa fa-search fa-2x"></i>
        <%end%>
        <%unless portfolio.url.nil?%>
          <%=link_to portfolio.url, class: "linKed", target: :blank do %>
            <i class="fa fa-link fa-2x"></i></i>
          <%end%>
        <%end%>
      </span>
    </span>
    <%=image_tag portfolio.thumbnail, width: 450, height: 450, alt: portfolio.title %>
  </div>
</li>
