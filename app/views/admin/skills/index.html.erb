<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2"><%= Skill.model_name.human.pluralize %></h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
      <%= link_to t(:new, scope: %i[helpers]), "#", class: 'btn btn-sm btn-outline-secondary', data: { toggle: 'modal', target: '#modal_new_skill' } %>
    </div>
  </div>
</div>

<%= render 'admin/shared/notification' %>

<%= render 'admin/shared/tabs', action: :skills %>

<%= turbo_frame_tag "skills_#{active_locale}", class: "row" do %>
  <%= render @skills %>
<% end %>

<%= render partial: 'admin/shared/modal', locals: { model: Skill } %>
