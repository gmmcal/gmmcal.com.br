<%= turbo_frame_tag 'modal' do %>
  <div class="modal fade" id="modal_new_<%= model.model_name.param_key %>" tabindex="-1" aria-labelledby="ariaLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="ariaLabel"><%= t(:new, scope: %i[helpers]) %> <%= model.model_name.human %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <%= render partial: 'form', locals: { model.model_name.param_key.to_sym => model.new } %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-backdrop fade d-none"></div>
<% end %>
