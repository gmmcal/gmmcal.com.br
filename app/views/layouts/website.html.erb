<!--[if gt IE 9]><!--><html class="no-js" lang="<%=I18n.locale%>"><!--<![endif]--><head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<title>Gustavo Cunha - Software Engineer</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="<%=ActionView::Base.full_sanitizer.sanitize(t(:text, scope: [:about]))%>" />
	<!-- Open Graph Tags -->
	<meta property="og:title" content="Gustavo Cunha - Software Engineer" />
	<meta property="og:site_name" content="Gustavo Cunha"/>
	<meta property="og:image" content="<%=asset_url('website/avatar.jpg')%>"/>
	<meta property="og:url" content="<%=home_url(I18n.locale)%>" />
	<meta property="og:description" content="<%=ActionView::Base.full_sanitizer.sanitize(t(:text, scope: [:about]))%>" />
	<meta property="og:type" content="website" />
	<meta property="og:locale" content="<%=I18n.locale%>" />
	<!--google font style-->
	<!--font-family: 'Open Sans', sans-serif;-->
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,600,700,800,300' rel='stylesheet' type='text/css'>
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'modernizr', 'data-turbolinks-track' => true %>

	<noscript>
	<%= stylesheet_link_tag 'fallback', media: 'all', 'data-turbolinks-track' => true %>
	</noscript>
	<!--[if lt IE 9]>
		<%= stylesheet_link_tag 'fallback', media: 'all', 'data-turbolinks-track' => true %>
	<![endif]-->
</head>
<body>
	<!--wrapper start-->
	<div class="wrapper" id="wrapper" itemscope itemtype="https://schema.org/Person">
		<header>
			<ul class="i18n">
				<li><%=link_to "BR", home_path(:br), class: "flag br" %></li>
				<li><%=link_to "EN", home_path(:en), class: "flag gb" %></li>
			</ul>
			<!--banner start-->
			<div class="banner row" id="banner">
				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 noPadd" style="height:100%">
					<!--background slide show start-->
					<div class="bannerPart"> <%=image_tag "website/banner.jpg", class: "bannerImg"%> </div>
					<!--background slide show end-->
				</div>
			</div>
			<!--banner end-->
			<div id="home" class="bannerText container">
				<h1><%=t(:name, scope: [:template])%></h1>
				<h2><%=t(:title, scope: [:template])%></h2>
			</div>
			<!--menu start-->
			<div class="menu">
				<div class="navbar-wrapper">
					<div class="container">
						<div class="navwrapper">
							<div class="navbar navbar-inverse navbar-static-top">
								<div class="container">
									<div class="navbar-header">
										<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
										<a class="navbar-brand" href="#">Menu</a>
									</div>
									<div class="navbar-collapse collapse">
										<ul class="nav navbar-nav">
											<li class="menuItem active"><a href="#home"><%=t(:home, scope: [:template, :menu])%></a></li>
											<li class="menuItem"><a href="#aboutme"><%=t(:about, scope: [:template, :menu])%></a></li>
											<li class="menuItem"><a href="#technical"><%=t(:skills, scope: [:template, :menu])%></a></li>
											<li class="menuItem"><a href="#experience"><%=t(:experience, scope: [:template, :menu])%></a></li>
											<li class="menuItem"><a href="#education"><%=t(:education, scope: [:template, :menu])%></a></li>
											<li class="menuItem"><a href="#portfolio"><%=t(:portfolio, scope: [:template, :menu])%></a></li>
											<li class="menuItem"><a href="#contact"><%=t(:contact, scope: [:template, :menu])%></a></li>
											<li class="menuItem"><a href="#footer"><%=t(:social, scope: [:template, :menu])%></a></li>
										</ul>
									</div>
								</div>
							</div>
						</div>
						<!-- End Navbar -->
					</div>
				</div>
			</div>
			<!--menu end-->
		</header>
		<%= yield %>
		<!--footer start-->
		<section class="footer" id="footer">
			<div class="container">
				<ul>
					<li><a href="https://github.com/gmmcal" target="_blank"><i class="fa fa-github fa-2x"></i></a></li>
					<li><a href="https://linkedin.com/in/gmmcal" target="_blank"><i class="fa fa-linkedin fa-2x"></i></a></li>
					<li><a href="https://twitter.com/gmmcal" target="_blank"><i class="fa fa-twitter fa-2x"></i></a></li>
				</ul>
			</div>
		</section>
		<!--footer end-->
	</div>
	<!--wrapper end-->
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
