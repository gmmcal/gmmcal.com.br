{
  "name": "Gustavo Cunha",
  "description": "Personal Website",
  "website": "https://www.gmmcal.com.br/",
  "repository": "https://github.com/gmmcal/gmmcal.com.br",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  },
  "env": {
    "RAILS_MASTER_KEY": {
      "required": true
    },
    "DATABASE_URL": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
  },
  "formation": {
  },
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "10"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
