{
  "name": "Gustavo Cunha",
  "description": "Personal Website",
  "website": "https://www.gmmcal.com.br/",
  "repository": "https://github.com/gmmcal/gmmcal.com.br",
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate db:seed db:seed:all"
  },
  "env": {
    "BUNDLE_WITHOUT": {
      "required": true
    },
    "RAILS_MASTER_KEY": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "11"
      }
    },
    {
      "plan": "heroku-redis",
      "options": {
        "version": "4"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/ruby"
    }
  ]
}
